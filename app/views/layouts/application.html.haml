!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title AwesomeEvents
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    %header.navbar.navbar-expand-sm.navbar-lignt.bg-light
      .container
        = link_to "AwesomeEvents", root_path, class: "navbar-brand"
        %ui.navbar-nav
          - if logged_in?
            %li.nav-item
              = link_to "ログアウト", logout_path, class: "nav-link", method: :delete
          - else
            %li.nav-item
              = link_to "Githubでログイン", "/auth/github", class: "nav-link", method: :post
    .container
      - if flash.notice
        .alert.alert-success
          = flash.notice
      = yield
